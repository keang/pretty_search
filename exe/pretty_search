#!/usr/bin/env ruby
require 'pretty_search'

options = begin
            PrettySearch.parse_cli_opts
          rescue GetoptLong::Error
            abort
          end
if options[:help]
  puts PrettySearch::HELP_TEXT
  exit
end

query = begin
          PrettySearch::Query.parse(ARGV)
        rescue => e
          abort e.message
        end
PrettySearch.run(query, options)
